generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Banco de dados persistente local
}

model Classification {
  id        Int      @id @default(autoincrement())
  question  String
  response  String
  createdAt DateTime @default(now())
}
